<div class="big-container product-manage-wrapper flexed-item">
  <form action="/prod-add" method="post" class="add-product-form" enctype="multiparty/form-data">
    {{#if msg}}
    <p class="msg {{msg.statu}}">{{msg.txt}}</p>
    {{/if}}
    <h3 class="form-title">Add Sneackers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneackerSname" class="label-name label">Model name</label>
      <input name="name" id="sneackerSname" type="text" class="input-text input" placeholder="Nike Air Max 90"
        value="air max 1">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneackerSref" class="label-ref label">RÃ©f.</label>
      <input name="ref" id="sneackerSref" type="text" class="input-text input" placeholder="ex: NV23498"
        value="NV23498">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneackerSsize" class="label-ref label">Size</label>
      <input name="size" id="sneackerSsize" 
      type="number" class="input-text input" placeholder="ex: 37" value="42">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneackerSdescr" class="label-descr label">Description</label>
      <input name="descr" id="sneackerSdescr" type="text" class="input-text input"
        placeholder="The better sneakers to run" value="foo bar baz">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneackerSprice" class="label-price label">Price</label>
      <input name="price" id="sneackerSprice" type="number" class="sneacker-price input" min="1" value="123">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneackerSimg" class="label-price label">Image</label>
      <input name="img" id="sneackerSimg" type="file" class="sneacker-price input">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select name="category" id="category" class="select" required>
        <option value="-1" disabled selected>Choose a category</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="tags" class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneacker-btn">Add to collection</button>
  </form>

  <div class="add-tag-form">
    <p id="add-tag-message" class="msg"></p>
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="category-name" class="category-name label">Sneaker tag</label>
      <input id="new_tag_name" type="text" class="input" placeholder="ex: Gangsta">
    </div>
    <button id="btn_new_tag" class="button-primary add-category-btn">Create this category</button>
  </div>
</div>